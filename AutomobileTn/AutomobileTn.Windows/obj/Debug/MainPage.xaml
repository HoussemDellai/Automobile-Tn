<Page xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:Converters="using:AutomobileTn.Converters"
      xmlns:Interactivity="using:Microsoft.Xaml.Interactivity"
      xmlns:Core="using:Microsoft.Xaml.Interactions.Core"
      xmlns:Media="using:Microsoft.Xaml.Interactions.Media"
      x:Class="AutomobileTn.MainPage"
      mc:Ignorable="d"
      d:DesignWidth="6000"
      RequestedTheme="Dark">

    <Page.Resources>

        <Converters:ListToSubListConverter x:Key="ListToSubListConverter" />

        <Converters:RelativeDateTimeConverter x:Key="RelativeDateTimeConverter" />

        <Converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Converters:IntToPriceConverter x:Key="IntToPriceConverter" />
        <Converters:StringToImageUrlConverter x:Key="StringToImageUrlConverter" />

        <Storyboard x:Name="ShowUpStoryboard">

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                                           Storyboard.TargetName="AddCarToFavoritDialog">
                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="-200" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.6"
                                      Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                           Storyboard.TargetName="AddCarToFavoritDialog">
                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="0.0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.6"
                                      Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                           Storyboard.TargetName="AddCarToFavoritDialog">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.6">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>

        </Storyboard>

        <Storyboard x:Name="ShowDownStoryboard">

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                                           Storyboard.TargetName="AddCarToFavoritDialog">
                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.6"
                                      Value="200">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                           Storyboard.TargetName="AddCarToFavoritDialog">
                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.6"
                                      Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                           Storyboard.TargetName="AddCarToFavoritDialog">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.6">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Collapsed</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <Storyboard x:Name="ShowUpRemoveDialogStoryboard">

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                                           Storyboard.TargetName="RemoveCarFromFavoritDialog">
                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="-200" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.6"
                                      Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                           Storyboard.TargetName="RemoveCarFromFavoritDialog">
                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="0.0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.6"
                                      Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                           Storyboard.TargetName="RemoveCarFromFavoritDialog">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.6">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>

        </Storyboard>

        <Storyboard x:Name="ShowDownRemoveDialogStoryboard">

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(CompositeTransform.TranslateY)"
                                           Storyboard.TargetName="RemoveCarFromFavoritDialog">
                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="0" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.6"
                                      Value="200">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)"
                                           Storyboard.TargetName="RemoveCarFromFavoritDialog">
                <EasingDoubleKeyFrame KeyTime="0"
                                      Value="1" />
                <EasingDoubleKeyFrame KeyTime="0:0:0.6"
                                      Value="0">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <BackEase EasingMode="EaseInOut" />
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>

            <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Visibility)"
                                           Storyboard.TargetName="RemoveCarFromFavoritDialog">
                <DiscreteObjectKeyFrame KeyTime="0">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Visible</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
                <DiscreteObjectKeyFrame KeyTime="0:0:0.6">
                    <DiscreteObjectKeyFrame.Value>
                        <Visibility>Collapsed</Visibility>
                    </DiscreteObjectKeyFrame.Value>
                </DiscreteObjectKeyFrame>
            </ObjectAnimationUsingKeyFrames>
        </Storyboard>

        <DataTemplate x:Key="MainCarDataTemplate">
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,6"
                        Width="341">

                <Interactivity:Interaction.Behaviors>
                    <Core:EventTriggerBehavior EventName="Tapped">

                        <Core:InvokeCommandAction Command="{Binding MainViewModel.SelectSelectedCarCommand, Mode=OneWay, Source={StaticResource Factory}}"
                                                  CommandParameter="{Binding Mode=OneWay}" />

                        <Media:ControlStoryboardAction ControlStoryboardOption="Play"
                                                       Storyboard="{Binding ElementName=ShowUpStoryboard}" />

                    </Core:EventTriggerBehavior>

                </Interactivity:Interaction.Behaviors>
                <Image Source="{Binding ImageUrl}"
                       Height="84"
                       Width="160"
                       Stretch="UniformToFill" />
                <StackPanel Width="185"
                            Background="DarkGray"
                            Orientation="Horizontal">

                    <Grid Background="White"
                          Height="12"
                          Width="12"
                          Margin="-6,18"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Left"
                          RenderTransformOrigin="0.5,0.5">
                        <Grid.RenderTransform>
                            <CompositeTransform Rotation="-45" />
                        </Grid.RenderTransform>
                    </Grid>

                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="{Binding Model}"
                                   FontFamily="Segoe UI Black"
                                   FontSize="24"
                                   Margin="0,12,12,0" />
                        <TextBlock Text="{Binding Price, Converter={StaticResource IntToPriceConverter}}"
                                   FontFamily="Segoe UI"
                                   FontSize="20"
                                   Margin="0,0"
                                   Opacity="0.5"
                                   Foreground="Black" />

                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </DataTemplate>

    </Page.Resources>

    <Page.DataContext>
        <Binding Path="MainViewModel"
                 Source="{StaticResource Factory}" />
    </Page.DataContext>

    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton Icon="Refresh"
                          Label="rafraichir"
                          Command="{Binding RefreshCommand}" />
            <AppBarButton x:ConnectionId='1' Label="rechercher"
                                                          
                          Icon="Find" />
        </CommandBar>
    </Page.BottomAppBar>

    <Grid x:Name="RootLayout">

        <Hub x:Name="MainHub">

            <Hub.Resources>
                <DataTemplate x:Key="HubHeaderTextBlock">
                    <TextBlock Text="{Binding}"
                               FontFamily="Pericles"
                               FontSize="36"
                               Margin="0,24,0,0"
                               Opacity="0.8"
                               FontWeight="SemiBold" />
                    <!--Foreground="#FFD90000"-->
                </DataTemplate>
            </Hub.Resources>

            <Hub.Background>
                <ImageBrush Stretch="UniformToFill"
                            ImageSource="Images/pattern-wallpapers.jpg" />
            </Hub.Background>

            <HubSection x:Name="ManifacturersSection"
                        Padding="80,30,40,0">
                <DataTemplate>
                    <GridView Name="ManifacturersGridView"
                              ItemsSource="{Binding GroupCarsCollection}">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="SelectionChanged">
                                <Core:ChangePropertyAction PropertyName="Visibility"
                                                           TargetObject="{Binding ElementName=SelectedManifacturerSection}">
                                    <Core:ChangePropertyAction.Value>
                                        <Visibility>Visible</Visibility>
                                    </Core:ChangePropertyAction.Value>
                                </Core:ChangePropertyAction>
                                <Core:ChangePropertyAction PropertyName="DataContext"
                                                           TargetObject="{Binding ElementName=SelectedManifacturerSection}"
                                                           Value="{Binding SelectedItem, ElementName=ManifacturersGridView}" />

                                <!--<Core:ChangePropertyAction PropertyName="DataContext"
                                                           TargetObject="{Binding ElementName=SelectedManifacturerSection}"
                                                           Value="{Binding SelectedItem, Converter={StaticResource GroupCarsToListCarsConverters}, ElementName=ManifacturersGridView}" />-->
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="-5">
                                    <Grid Background="Orange"
                                          Opacity="0.7" />
                                    <Grid VerticalAlignment="Top"
                                          Height="1"
                                          Background="White"
                                          Margin="10,0"
                                          Opacity="0.5" />
                                    <Grid HorizontalAlignment="Left"
                                          Width="1"
                                          Background="White"
                                          Margin="0,10"
                                          Opacity="0.5" />
                                    <StackPanel Orientation="Vertical">
                                        <Image Source="{Binding Manifacturer, Converter={StaticResource StringToImageUrlConverter}, Mode=OneWay}"
                                               Height="100"
                                               Stretch="UniformToFill" />
                                        <TextBlock Text="{Binding Manifacturer}"
                                                   Margin="10,0,10,10"
                                                   HorizontalAlignment="Center"
                                                   FontSize="18"
                                                   FontFamily="Pericles" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="SelectedManifacturerSection"
                        Visibility="Collapsed"
                        DataContext="{Binding GroupCarsCollection[1]}"
                        Header="{Binding Manifacturer}"
                        Padding="40,0,40,40"
                        HeaderTemplate="{StaticResource HubHeaderTextBlock}">
                <DataTemplate>
                    <GridView Name="SelectedManifacturerListView"
                              Padding="0,0,0,96"
                              IsItemClickEnabled="True"
                              SelectionMode="None"
                              ItemsSource="{Binding CarsCollection}">

                        <GridView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="-5">
                                    <Grid Background="White"
                                          Opacity="0.8" />
                                    <Grid VerticalAlignment="Top"
                                          Height="1"
                                          Background="Firebrick"
                                          Margin="10,0"
                                          Opacity="0.5" />
                                    <Grid HorizontalAlignment="Left"
                                          Width="1"
                                          Background="Firebrick"
                                          Margin="0,10"
                                          Opacity="0.5" />

                                    <StackPanel Orientation="Horizontal">
                                        <Interactivity:Interaction.Behaviors>
                                            <Core:EventTriggerBehavior EventName="Tapped">
                                                <Core:InvokeCommandAction Command="{Binding MainViewModel.SelectSelectedCarCommand, Mode=OneWay, Source={StaticResource Factory}}"
                                                                          CommandParameter="{Binding Mode=OneWay}" />
                                                <Media:ControlStoryboardAction Storyboard="{StaticResource ShowUpStoryboard}"
                                                                               ControlStoryboardOption="Play" />
                                            </Core:EventTriggerBehavior>
                                        </Interactivity:Interaction.Behaviors>
                                        <Image Source="{Binding ImageUrl}"
                                               Width="170"
                                               Stretch="Uniform"
                                               Margin="1,1,0,0" />
                                        <StackPanel Width="250">

                                            <TextBlock Text="{Binding Model}"
                                                       FontFamily="Segoe UI Black"
                                                       FontSize="20"
                                                       Margin="10"
                                                       Foreground="Firebrick" />
                                            <TextBlock FontFamily="Segoe UI"
                                                       FontSize="20"
                                                       Margin="10,0,0,0"
                                                       Opacity="0.6"
                                                       Foreground="Black">
                                                <Run Text="{Binding Price}" />
                                                <Run Text=" DT" />
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="FavoritSection"
                        Header="Favoris"
                        Padding="40,0,40,40"
                        HeaderTemplate="{StaticResource HubHeaderTextBlock}">
                <DataTemplate>
                    <ListView Padding="0,0,0,96"
                              ItemsSource="{Binding FavoritCarsCollection}"
                              IsItemClickEnabled="True"
                              SelectionMode="Single">

                        <ListView.ItemTemplate>
                            <DataTemplate>

                                <Grid Margin="-5">
                                    <Interactivity:Interaction.Behaviors>
                                        <Core:EventTriggerBehavior EventName="Tapped">
                                            <Core:InvokeCommandAction Command="{Binding MainViewModel.SelectSelectedCarCommand, Mode=OneWay, Source={StaticResource Factory}}"
                                                                      CommandParameter="{Binding Mode=OneWay}" />
                                            <Media:ControlStoryboardAction Storyboard="{StaticResource ShowUpRemoveDialogStoryboard}"
                                                                           ControlStoryboardOption="Play" />
                                        </Core:EventTriggerBehavior>
                                    </Interactivity:Interaction.Behaviors>
                                    <Grid Background="White"
                                          Opacity="0.8" />
                                    <Grid VerticalAlignment="Top"
                                          Height="1"
                                          Background="Firebrick"
                                          Margin="10,0"
                                          Opacity="0.5" />
                                    <Grid HorizontalAlignment="Left"
                                          Width="1"
                                          Background="Firebrick"
                                          Margin="0,10"
                                          Opacity="0.5" />

                                    <StackPanel Orientation="Horizontal">

                                        <Image Source="{Binding ImageUrl}"
                                               Width="170"
                                               Stretch="Uniform"
                                               Margin="1,1,0,0" />
                                        <StackPanel Width="250">

                                            <TextBlock Text="{Binding Manifacturer}"
                                                       FontFamily="Segoe UI Black"
                                                       FontSize="20"
                                                       Margin="10,10,10,0"
                                                       Foreground="Black" />

                                            <TextBlock Text="{Binding Model}"
                                                       FontFamily="Segoe UI Black"
                                                       FontSize="20"
                                                       Margin="10,0,0,0"
                                                       Foreground="Firebrick" />
                                            <TextBlock FontFamily="Segoe UI"
                                                       FontSize="20"
                                                       Margin="10,0"
                                                       Opacity="0.6"
                                                       Foreground="Black">
                                                <Run Text="{Binding Price}" />
                                                <Run Text=" DT" />
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>

                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

            <HubSection x:Name="SearchSection"
                        Header="Recherche"
                        Padding="40,0,40,40"
                        Visibility="Collapsed"
                        HeaderTemplate="{StaticResource HubHeaderTextBlock}">
                <DataTemplate>
                    <Grid>

                        <StackPanel VerticalAlignment="Top"
                                    Orientation="Vertical">

                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,12">

                                <HyperlinkButton Content="prix"
                                                 FontSize="24"
                                                 Padding="0,0,10,0">
                                    <Interactivity:Interaction.Behaviors>
                                        <Core:EventTriggerBehavior EventName="Click">
                                            <Core:ChangePropertyAction TargetObject="{Binding ElementName=MainSearchSlider}"
                                                                       PropertyName="Visibility" />
                                            <Core:ChangePropertyAction PropertyName="Visibility"
                                                                       TargetObject="{Binding ElementName=autoSuggestBox}">
                                                <Core:ChangePropertyAction.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </Core:ChangePropertyAction.Value>
                                            </Core:ChangePropertyAction>
                                        </Core:EventTriggerBehavior>
                                    </Interactivity:Interaction.Behaviors>
                                </HyperlinkButton>

                                <HyperlinkButton Content="modèle"
                                                 Margin="24,0"
                                                 FontSize="24">
                                    <Interactivity:Interaction.Behaviors>
                                        <Core:EventTriggerBehavior EventName="Click">
                                            <Core:ChangePropertyAction PropertyName="Visibility"
                                                                       TargetObject="{Binding ElementName=autoSuggestBox}" />
                                            <Core:ChangePropertyAction TargetObject="{Binding ElementName=MainSearchSlider}"
                                                                       PropertyName="Visibility">
                                                <Core:ChangePropertyAction.Value>
                                                    <Visibility>Collapsed</Visibility>
                                                </Core:ChangePropertyAction.Value>
                                            </Core:ChangePropertyAction>
                                        </Core:EventTriggerBehavior>
                                    </Interactivity:Interaction.Behaviors>
                                </HyperlinkButton>

                            </StackPanel>

                            <SearchBox x:Name="autoSuggestBox"
                                       VerticalAlignment="Top"
                                       Margin="0,0,0,0"
                                       QueryText="{Binding SearchedKeyword, Mode=TwoWay}"
                                       Visibility="Collapsed">
                                <Interactivity:Interaction.Behaviors>
                                    <Core:EventTriggerBehavior EventName="QueryChanged">
                                        <Core:InvokeCommandAction Command="{Binding SearchCarsByKeywordCommand, Mode=OneWay}" />
                                    </Core:EventTriggerBehavior>
                                </Interactivity:Interaction.Behaviors>

                            </SearchBox>

                            <Slider x:Name="MainSearchSlider"
                                    VerticalAlignment="Top"
                                    Minimum="15000"
                                    Maximum="400000"
                                    Orientation="Horizontal"
                                    Value="{Binding SearchedPrice, Mode=TwoWay}"
                                    Height="67"
                                    LargeChange="5000"
                                    Visibility="Collapsed">
                                <Slider.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock>
											<Run Text="Prix (+/- 10%) : " />
											<Run Text="{Binding SearchedPrice}" />
                                        </TextBlock>
                                    </DataTemplate>
                                </Slider.HeaderTemplate>
                                <Interactivity:Interaction.Behaviors>
                                    <Core:EventTriggerBehavior EventName="ValueChanged">
                                        <Core:InvokeCommandAction Command="{Binding SearchCarsByPriceCommand, Mode=OneWay}" />
                                    </Core:EventTriggerBehavior>
                                </Interactivity:Interaction.Behaviors>
                            </Slider>

                        </StackPanel>

                        <ListView Padding="0,0,0,96"
                                  ItemsSource="{Binding SearchedCarsCollection}"
                                  Margin="0,140,0,0">

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="-5">
                                        <Interactivity:Interaction.Behaviors>
                                            <Core:EventTriggerBehavior EventName="Tapped">
                                                <Core:InvokeCommandAction Command="{Binding MainViewModel.SelectSelectedCarCommand, Mode=OneWay, Source={StaticResource Factory}}"
                                                                          CommandParameter="{Binding Mode=OneWay}" />
                                                <Media:ControlStoryboardAction Storyboard="{StaticResource ShowUpStoryboard}"
                                                                               ControlStoryboardOption="Play" />
                                            </Core:EventTriggerBehavior>
                                        </Interactivity:Interaction.Behaviors>
                                        <Grid Background="White"
                                              Opacity="0.8" />
                                        <Grid VerticalAlignment="Top"
                                              Height="1"
                                              Background="Firebrick"
                                              Margin="10,0"
                                              Opacity="0.5" />
                                        <Grid HorizontalAlignment="Left"
                                              Width="1"
                                              Background="Firebrick"
                                              Margin="0,10"
                                              Opacity="0.5" />

                                        <StackPanel Orientation="Horizontal">

                                            <Image Source="{Binding ImageUrl}"
                                                   Width="170"
                                                   Stretch="Uniform"
                                                   Margin="1,1,0,0" />
                                            <StackPanel Width="250">

                                                <TextBlock Text="{Binding Manifacturer}"
                                                           FontFamily="Segoe UI Black"
                                                           FontSize="20"
                                                           Margin="10,10,10,0"
                                                           Foreground="Black" />

                                                <TextBlock Text="{Binding Model}"
                                                           FontFamily="Segoe UI Black"
                                                           FontSize="20"
                                                           Margin="10,0,0,0"
                                                           Foreground="Firebrick" />
                                                <TextBlock FontFamily="Segoe UI"
                                                           FontSize="20"
                                                           Margin="10,0"
                                                           Opacity="0.6"
                                                           Foreground="Black">
                                                <Run Text="{Binding Price}" />
                                                <Run Text=" DT" />
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        
                        </ListView>

                    </Grid>
                </DataTemplate>
            </HubSection>

            <HubSection Header="Videos"
                        Padding="40,0,40,40"
                        HeaderTemplate="{StaticResource HubHeaderTextBlock}">
                <DataTemplate>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="492" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid DataContext="{Binding VideosCollection[0]}"
                              Grid.Column="0"
                              Height="440"
                              VerticalAlignment="Top">

                            <Interactivity:Interaction.Behaviors>
                                <Core:EventTriggerBehavior EventName="Tapped">
                                    <Core:InvokeCommandAction Command="{Binding MainViewModel.SelectVideoCommand, Mode=OneWay, Source={StaticResource Factory}}"
                                                              CommandParameter="{Binding }" />

                                    <Core:NavigateToPageAction TargetPage="AutomobileTn.Views.VideosCollectionPage" />
                                </Core:EventTriggerBehavior>
                            </Interactivity:Interaction.Behaviors>

                            <Image Source="{Binding MediumThumbnail}"
                                   Stretch="UniformToFill" />

                            <Grid VerticalAlignment="Bottom"
                                  Margin="0,0,50,0">
                                <Grid Background="White"
                                      Opacity="0.8" />
                                <StackPanel>
                                    <TextBlock Text="{Binding Title}"
                                               FontFamily="Pericles"
                                               FontSize="36"
                                               Margin="10"
                                               TextWrapping="Wrap"
                                               Foreground="Black" />
                                    <Grid Margin="10,0,10,10"
                                          Opacity="0.5">
                                        <TextBlock Text="{Binding PubDate, Converter={StaticResource RelativeDateTimeConverter}}"
                                                   FontFamily="Pericles"
                                                   FontSize="24"
                                                   TextWrapping="Wrap"
                                                   Foreground="Black" />
                                        <Grid HorizontalAlignment="Right"
                                              Width="30"
                                              Opacity="0.5">
                                            <Image Source="Images/LightIcons/basecircle.png" />
                                            <Image Source="Images/LightIcons/next.png" />
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </Grid>

                        <GridView x:Name="listView"
                                  ItemsSource="{Binding VideosCollection, ConverterParameter=1, Converter={StaticResource ListToSubListConverter}}"
                                  Grid.Column="1">

                            <Interactivity:Interaction.Behaviors>
                                <Core:EventTriggerBehavior EventName="SelectionChanged">
                                    <Core:InvokeCommandAction Command="{Binding SelectVideoCommand, Mode=OneWay}"
                                                              CommandParameter="{Binding SelectedItem, ElementName=listView}" />
                                </Core:EventTriggerBehavior>
                                <Core:EventTriggerBehavior EventName="SelectionChanged">
                                    <Core:NavigateToPageAction TargetPage="AutomobileTn.Views.VideosCollectionPage" />
                                </Core:EventTriggerBehavior>
                            </Interactivity:Interaction.Behaviors>

                            <GridView.ItemTemplate>
                                <DataTemplate>
                                    <Grid Width="280"
                                          Height="220"
                                          Margin="-5"
                                          Background="Black">

                                        <Image Source="{Binding MediumThumbnail}"
                                               Stretch="UniformToFill" />

                                        <Grid VerticalAlignment="Bottom"
                                              Margin="0,0,50,0">
                                            <Grid Background="White"
                                                  Opacity="0.8" />
                                            <StackPanel>
                                                <TextBlock Text="{Binding Title}"
                                                           FontFamily="Pericles"
                                                           FontSize="22"
                                                           Margin="10"
                                                           TextWrapping="Wrap"
                                                           MaxLines="2"
                                                           Foreground="Black" />
                                                <Grid Margin="10,-10,10,10">
                                                    <TextBlock Text="{Binding PubDate, Converter={StaticResource RelativeDateTimeConverter}}"
                                                               Opacity="0.5"
                                                               FontFamily="Segoe UI"
                                                               FontSize="18"
                                                               TextWrapping="Wrap"
                                                               Foreground="Black" />

                                                    <Grid HorizontalAlignment="Right"
                                                          Width="25"
                                                          Opacity="0.5">
                                                        <Image Source="Images/LightIcons/basecircle.png" />
                                                        <Image Source="Images/LightIcons/next.png" />
                                                    </Grid>

                                                </Grid>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>

                    </Grid>

                </DataTemplate>
            </HubSection>

            <HubSection Header="Tweets"
                        Width="520"
                        Padding="40,0,0,40"
                        HeaderTemplate="{StaticResource HubHeaderTextBlock}">
                <DataTemplate>
                    <ListView Padding="0,0,0,96"
                              ItemsSource="{Binding TweetsCollection}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="4*" />
                                    </Grid.ColumnDefinitions>
                                    <Image Source="{Binding ImageUrl}"
                                           VerticalAlignment="Top" />
                                    <StackPanel Orientation="Vertical"
                                                Grid.Column="1">
                                        <TextBlock Text="{Binding Text}"
                                                   TextWrapping="Wrap"
                                                   FontSize="16"
                                                   Margin="12,-6,0,0" />
                                        <TextBlock Text="{Binding PublishDate, Converter={StaticResource RelativeDateTimeConverter}}"
                                                   TextWrapping="Wrap"
                                                   FontSize="16"
                                                   Opacity="0.6"
                                                   TextTrimming="WordEllipsis"
                                                   HorizontalAlignment="Right" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DataTemplate>
            </HubSection>

        </Hub>

        <Grid Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid Background="Black"
                  Opacity="0.8" />
            <StackPanel VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Text="Chargement des données..."
                           FontSize="14" />
                <ProgressBar IsIndeterminate="True"
                             IsEnabled="True"
                             Margin="0,12" />
            </StackPanel>
        </Grid>

        <Image Source="Images/automobile-logo.png"
               Stretch="Uniform"
               Height="85"
               Margin="62,-24,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Width="274" />

        <Grid x:Name="AddCarToFavoritDialog"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              RenderTransformOrigin="0.5,0.5"
              Visibility="Collapsed"
              Width="480"
              Background="Firebrick">
            <Grid.RenderTransform>
                <CompositeTransform />
            </Grid.RenderTransform>

            <StackPanel Orientation="Vertical"
                        Margin="24">
                <TextBlock FontSize="16"
                           TextWrapping="Wrap">
					<Run Text="Voulez vous ajouter " />
					<Run Text="{Binding SelectedCar.Manifacturer}" />
					<Run Text="" />
					<Run Text="{Binding SelectedCar.Model}" />
					<Run Text=" à vos favoris ?" />
                </TextBlock>
                <Grid Margin="0,24">

                    <Button Content="Ajouter">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:InvokeCommandAction Command="{Binding AddCarToFavoritListCommand, Mode=OneWay}" />
                                <Core:ChangePropertyAction PropertyName="Visibility"
                                                           TargetObject="{Binding ElementName=AddCarToFavoritDialog}">
                                    <Core:ChangePropertyAction.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </Core:ChangePropertyAction.Value>
                                </Core:ChangePropertyAction>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>

                    <Button Content="Cancel"
                            HorizontalAlignment="Right">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">

                                <Core:ChangePropertyAction TargetObject="{Binding ElementName=AddCarToFavoritDialog}"
                                                           PropertyName="Visibility">
                                    <Core:ChangePropertyAction.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </Core:ChangePropertyAction.Value>

                                </Core:ChangePropertyAction>

                                <Media:ControlStoryboardAction ControlStoryboardOption="Play"
                                                               Storyboard="{Binding ElementName=ShowDownStoryboard}" />

                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>

                </Grid>
            </StackPanel>
        </Grid>

        <Grid x:Name="RemoveCarFromFavoritDialog"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              RenderTransformOrigin="0.5,0.5"
              Visibility="Collapsed"
              Width="480"
              Background="Firebrick">
            <Grid.RenderTransform>
                <CompositeTransform />
            </Grid.RenderTransform>

            <StackPanel Orientation="Vertical"
                        Margin="24">
                <TextBlock FontSize="16"
                           TextWrapping="Wrap">
					<Run Text="Voulez vous supprimer " />
					<Run Text="{Binding SelectedCar.Manifacturer}" />
					<Run Text="" />
					<Run Text="{Binding SelectedCar.Model}" />
					<Run Text=" de vos favoris ?" />
                </TextBlock>

                <Grid Margin="0,24">

                    <Button Content="supprimer">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Core:InvokeCommandAction Command="{Binding RemoveCarFromFavoritListCommand, Mode=OneWay}" />
                                <Core:ChangePropertyAction PropertyName="Visibility"
                                                           TargetObject="{Binding ElementName=RemoveCarFromFavoritDialog}">
                                    <Core:ChangePropertyAction.Value>
                                        <Visibility>Collapsed</Visibility>
                                    </Core:ChangePropertyAction.Value>
                                </Core:ChangePropertyAction>
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>

                    <Button Content="Cancel"
                            HorizontalAlignment="Right">
                        <Interactivity:Interaction.Behaviors>
                            <Core:EventTriggerBehavior EventName="Click">
                                <Media:ControlStoryboardAction Storyboard="{StaticResource ShowDownRemoveDialogStoryboard}"
                                                               ControlStoryboardOption="Play" />
                            </Core:EventTriggerBehavior>
                        </Interactivity:Interaction.Behaviors>
                    </Button>

                </Grid>
            </StackPanel>
        </Grid>

    </Grid>

</Page>

